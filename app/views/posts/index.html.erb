<div class="feed row">
  <div class="columns large-centered large-9">
    <%= form_for @post do |f| %>
      <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this review from being saved.</h2>
          <ul>
            <% @post.errors.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <h4>New Post</h4>
      <%= f.label :degree %>
      <%= f.collection_select :degree, Post::DEGREES, :to_i, :humanize %>
      <%= f.text_area :content %>
      <%= f.submit "Post", :class => "button" %>
    <% end %>
  </div>
  <div class="columns large-centered large-9">
    <% @posts.each do |post| %>
      <section>
        <h4><%= post.degree %>&deg;</h4>
        <h6><%= link_to "#{post.user.username}", user_path(post.user) %></h6>
        <br>
        <%= post.content %>
        <br>
        <% if post.comments.length > 0 %>
        <h5>Comments:</h5>
          <ul class="comments">
            <% post.comments.each do |c| %>
              <li class="comment">
                <h6><%= link_to "#{c.user.username}", user_path(c.user) %></h6>
                <p><%= c.content %></p>
              </li>
            <% end %>
          </ul>
        <% end %>
      </section>
    <% end %>
  </div>
</div>