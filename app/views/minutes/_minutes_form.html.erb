<%= form_for @minute do |f| %>
  <% if @minute.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@minute.errors.count, "error") %> prohibited this review from being saved.</h2>
      <ul>
        <% @minute.errors.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :degree %>
  <%= f.collection_select :degree, Post.degrees_selection(current_user), :to_i, :humanize %>
  <hr>
  <%= f.label :date %>
  <%= f.text_field :date, :id => "datepicker" %>
  <%= f.label :open %>
  <%= f.text_field :open %>
  <%= f.label :close %>
  <%= f.text_field :close %>
  <hr>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.submit "Submit", :class => "tiny button" %>
<% end %>